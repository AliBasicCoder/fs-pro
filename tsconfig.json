{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "types",
    "declaration": true,
    "allowJs": true
  },
  "include": ["src/**/*", "test/node/**/*"],
  "exclude": ["mod.ts", "test/deno", "node_modules"]
}
